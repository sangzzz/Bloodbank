<%- include("partials/Header.ejs") %>

<section id="login-register-title">
  <div class="container-fluid login-register">
    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="/">
        <h1><i class="fas fa-tint"></i>Blood +</h1>
      </a>
    </nav>

    <!-- Login form -->
  </div>
</section>

<section>
  <div
    class="container-fluid login-register-form"
    style="
      background-color: #fff;
      background-image: url(https://www.transparenttextures.com/patterns/ag-square.png);
    "
  >
    <form action="/login" method="POST">
      <div
        id="login-form"
        class="card login-register-form"
        style="width: 18rem;"
      >
        <div class="card-body login-register-form">
          <h5 class="card-title"><u>LOGIN FORM</u></h5>
          <br />
          <p>
            <input
              autocomplete="off"
              aria-autocomplete="none"
              class="login-input card-text"
              type="email"
              placeholder="Email"
              name="username"
              required
            />
          </p>
          <p>
            <input
              required
              autocomplete="off"
              aria-autocomplete="none"
              class="login-input card-text"
              type="password"
              placeholder="Password"
              name="password"
            />
          </p>
          <p>
            <button class="card-text btn btn-primary" type="submit">
              Login
            </button>
          </p>
        </div>
      </div>
    </form>
    <form action="/register" method="GET">
      <div id="login-form" class="card" style="width: 18rem;">
        <div class="card-body">
          <p class="card-text">
            <a href="/register"> New User? Create a new account here!</a>
          </p>
        </div>
      </div>
    </form>
  </div>
</section>

<%- include("partials/Footer.ejs") %>
