            <a class="nav-link" href="/camps">Donation Camps</a>
          </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link" href="/sponsor">Sponsor</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Login form -->
  </div>
</section>

